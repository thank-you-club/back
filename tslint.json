{
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "arrow-parens": false,
    "curly": false,
    "whitespace": false,
    "no-console": {
      "severity": "warn"
    },
    "max-line-length": false,
    "member-access": false
  }
}
